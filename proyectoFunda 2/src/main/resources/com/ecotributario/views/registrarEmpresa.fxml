<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecotributario.controllers.RegistrarEmpresaController">

    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #5083A1;" prefWidth="500">
            <ImageView fitWidth="300" fitHeight="300">
                <image>
                    <Image url="@/images/tax.png"/>
                </image>
            </ImageView>
            <Label text="Bienvenido a Ecotributario" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Ayuda al medio ambiente y él te recompensará" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: white;" maxWidth="300"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="12" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <ImageView fitHeight="80" fitWidth="250">
                <image>
                    <Image url="@/images/logo_ecotributario.png"/>
                </image>
            </ImageView>

            <Label text="Por favor completa los siguientes campos"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label text="Nombre de la Empresa"/>
            <TextField fx:id="nombreEmpresaField" prefWidth="300"/>

            <Label text="NIT"/>
            <TextField fx:id="nitField" prefWidth="300"/>

            <Label text="DIRECCION"/>
            <TextField fx:id="direccionField" prefWidth="300"/>

            <Label text="Sector"/>
            <TextField fx:id="sectorField" prefWidth="300"/>

            <Label text="Numero de Contacto"/>
            <TextField fx:id="contactoField" prefWidth="300"/>

            <Label text="Contraseña"/>
            <PasswordField fx:id="contrasenaField" prefWidth="300"/>

            <Button text="Registrarse"
                    onAction="#onRegistrarse"
                    style="-fx-background-color: #E8D6D3; -fx-font-weight: bold;"
                    prefWidth="300"/>

            <Button text="Volver al inicio"
                    onAction="#onVolver"
                    style="-fx-background-color: #E8D6D3;"
                    prefWidth="150"/>
        </VBox>
    </center>
</BorderPane>
