<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecotributario.controllers.InicioController">

    <center>
        <HBox spacing="0" prefHeight="600" prefWidth="900">

            <!-- Sección izquierda -->
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #3d6b82; -fx-padding: 40;" prefWidth="450">
                <ImageView fitWidth="250" preserveRatio="true">
                    <image>
                        <Image url="@/images/tax.png" />
                    </image>
                </ImageView>
                <Label text="Bienvenido a Ecotributario" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Ayuda al medio ambiente y él te recompensará" wrapText="true"
                       style="-fx-text-fill: white; -fx-font-size: 14px;" />
            </VBox>

            <!-- Sección derecha -->
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;" prefWidth="450">
                <ImageView fitWidth="350" preserveRatio="true">
                    <image>
                        <Image url="@/images/logo_ecotributario.png"/>
                    </image>
                </ImageView>

                <Label text="¿Cómo vas a iniciar sesión?" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <HBox spacing="40" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="10">
                        <ImageView fitWidth="150" preserveRatio="true">
                            <image>
                                <Image url="@/images/icon_admin.png"/>
                            </image>
                        </ImageView>
                        <Button text="Como Administrador" onAction="#onIngresarAdministrador"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10">
                        <ImageView fitWidth="150" preserveRatio="true">
                            <image>
                                <Image url="@/images/icon_empresa.png"/>
                            </image>
                        </ImageView>
                        <Button text="Como Empresa" onAction="#onIngresarEmpresa"/>
                    </VBox>
                </HBox>

                <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 0 0 0;">
                    <Label text="¿No tienes una cuenta aún ?" style="-fx-font-size: 14px;"/>
                    <Hyperlink text="Registrarse como administrador" onAction="#onRegistrarAdmin"/>
                    <Hyperlink text="Registrarse como empresa" onAction="#onRegistrarEmpresa"/>
                </VBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
