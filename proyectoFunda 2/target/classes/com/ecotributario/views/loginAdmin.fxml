<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecotributario.controllers.LoginAdminController">

    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #457a9e;" prefWidth="500">
            <ImageView fitWidth="300" preserveRatio="true">
                <image>
                    <Image url="@/images/tax.png"/>
                </image>
            </ImageView>
            <Label text="Bienvenido a Ecotributario" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Ayuda al medio ambiente y el te recompensara"
            wrapText="true"
            style="-fx-text-fill: white; -fx-font-size: 14px;"
            maxWidth="300"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 40 40 40 40;">
            <ImageView fitWidth="220" preserveRatio="true">
                <image>
                    <Image url="@/images/logo_ecotributario.png"/>
                </image>
            </ImageView>

            <Label text="Bienvenido de nuevo Administrador"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <Label text="Nombre completo" />
            <TextField fx:id="nombreField" prefWidth="300" />

            <Label text="ContraseÃ±a" />
            <PasswordField fx:id="contrasenaField" prefWidth="300" />

            <Label text="Correo Electronico" />
            <TextField fx:id="correoField" prefWidth="300" />

            <Button text="Ingresar"
                    onAction="#onIngresar"
                    prefWidth="300"
                    style="-fx-background-color: #eddcd9;" />

            <Button text="Volver al inicio"
                    onAction="#volverAlInicio"
                    prefWidth="300"
                    style="-fx-background-color: #f0e7e6;" />
        </VBox>
    </center>

</BorderPane>
