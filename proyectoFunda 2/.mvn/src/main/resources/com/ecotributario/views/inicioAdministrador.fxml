<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecotributario.controllers.InicioAdministradorController"
            style="-fx-background-color: #f0f6fb;">
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <ImageView fitHeight="80" preserveRatio="true" HBox.hgrow="ALWAYS">
                <image>
                    <Image url="@/images/logo_ecotributario.png"/>
                </image>
            </ImageView>
            <Label text="BIENVENIDO ADMINISTRADOR"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #004e72;"
                   HBox.hgrow="ALWAYS"
                   alignment="CENTER_LEFT"/>
        </HBox>
    </top>



    <center>
        <StackPane fx:id="panelContenido">
            <GridPane hgap="20" vgap="20" alignment="CENTER" style="-fx-padding: 30;">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="50" />
                    <RowConstraints percentHeight="50" />
                </rowConstraints>

                <!-- Imagen administrador -->
                <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <ImageView fitWidth="200" fitHeight="200">
                        <image>
                            <Image url="@/images/adminTrabajando.png" />
                        </image>
                    </ImageView>
                </VBox>

                <!-- Escritorio de solicitudes -->
                <VBox spacing="10" alignment="TOP_CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1"
                      style="-fx-background-color: #76b9d7; -fx-padding: 15; -fx-background-radius: 10;">
                    <Label text="Escritorio de solicitudes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Button text="SOLICITUD PENDIENTE DE 'NOMBRE DE EMPRESA'" prefWidth="250" />
                    <Button text="SOLICITUD PENDIENTE DE 'NOMBRE DE EMPRESA'" prefWidth="250" />
                    <Button text="SOLICITUD PENDIENTE DE 'NOMBRE DE EMPRESA'" prefWidth="250" />
                    <Button text="SOLICITUD PENDIENTE DE 'NOMBRE DE EMPRESA'" prefWidth="250" />
                    <Button text="REVISAR" onAction="#onRevisarSolicitudes"
                            style="-fx-background-color: #004e72; -fx-text-fill: white; -fx-font-weight: bold;" />
                    <Button text="CERRAR SESIÓN" onAction="#cerrarSesion"
                            style="-fx-background-color: #00334e; -fx-text-fill: white;" />
                </VBox>

                <!-- Ranking -->
                <VBox alignment="TOP_CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0"
                      style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">
                    <Label text="🏆 Top 3 Administradores del Mes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <HBox spacing="30" alignment="CENTER">
                        <VBox alignment="CENTER">
                            <Label text="🥈" style="-fx-font-size: 28px;"/>
                            <Label text="Ana Gómez" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        </VBox>
                        <VBox alignment="CENTER">
                            <Label text="🥇" style="-fx-font-size: 32px; -fx-text-fill: gold;"/>
                            <Label text="Juan Pérez" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #222222;"/>
                        </VBox>
                        <VBox alignment="CENTER">
                            <Label text="🥉" style="-fx-font-size: 28px;"/>
                            <Label text="Carlos Ruiz" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Desempeño -->
                <VBox alignment="TOP_CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1"
                      style="-fx-padding: 20; -fx-background-color: #d6ecf2; -fx-background-radius: 10;">
                    <Label text="📊 Tu Desempeño" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #00334e;"/>
                    <GridPane hgap="20" vgap="10">
                        <Label text="⭐ Puntuacion Global:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label text="4.8 ↑ 12%" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="📄 Solicitudes Procesadas" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label text="156" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="⏱ Tiempo promedio de resolucion" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label text="2.5 hours" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="✅ Tasa de aprobacion" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label text="85%" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>
            </GridPane>
        </StackPane>
    </center>

</BorderPane>
