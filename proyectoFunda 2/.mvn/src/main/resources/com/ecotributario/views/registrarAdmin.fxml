<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecotributario.controllers.RegistrarAdminController">

    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #5083A1;" prefWidth="500">
            <ImageView fitWidth="300" fitHeight="300">
                <image>
                    <Image url="@/images/tax.png"/>
                </image>
            </ImageView>
            <Label text="Bienvenido a Ecotributario" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Ayuda al medio ambiente y él te recompensará" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: white;" maxWidth="300"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <ImageView fitHeight="80" fitWidth="250">
                <image>
                    <Image url="@/images/logo_ecotributario.png"/>
                </image>
            </ImageView>

            <Label text="Encantados de Conocerte por favor dinos"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center;" />

            <Label text="Nombre completo"/>
            <TextField fx:id="nombreField" prefWidth="300"/>

            <Label text="Contraseña"/>
            <PasswordField fx:id="contrasenaField" prefWidth="300"/>

            <Label text="Correo Electrónico"/>
            <TextField fx:id="correoField" prefWidth="300"/>

            <Button text="Registrarse"
                    onAction="#onRegistrarse"
                    style="-fx-background-color: #E8D6D3; -fx-font-weight: bold;"
                    prefWidth="300"/>

            <Button text="Volver al inicio"
                    onAction="#onVolver"
                    style="-fx-background-color: #E8D6D3;"
                    prefWidth="150"/>
        </VBox>
    </center>
</BorderPane>
